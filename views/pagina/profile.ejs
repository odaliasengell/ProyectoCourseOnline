<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario - Progreso de Cursos</title>
    <link rel="stylesheet" href="/css/profile.css">

    <!-- Scripts de Firebase -->
    <script src="https://www.gstatic.com/firebasejs/9.19.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.19.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.19.1/firebase-firestore.js"></script>

    <!-- Script de tu archivo JS -->
    <script type="module" src="js/profile.js"></script>
</head>
<body>
    <div class="main-container">
        <!-- Sidebar Izquierda -->
        <aside class="sidebar">
            <div class="profile-info">
                <img src="../Imagenes/fotoperfil.png" alt="User Avatar" class="avatar" id="profile-pic">
                <h3 id="username"></h3>
                <p id="userhandle"></p>
            </div>

            <!-- Contenedor de Progreso de Cursos -->
            <div class="courses-progress-container">
                <h4>Progreso de Cursos</h4>
                <div id="courses-list" class="courses-container">
                    <!-- Aquí se cargarán los cursos del usuario -->
                </div>
            </div>
        </aside>

        <!-- Panel Principal -->
        <div class="main-panel">
            <header class="header">
                <h2>Editar Perfil</h2>
                <div class="back-button">
                    <a href="/home">
                        <i class="arrow-left"></i>
                    </a>
                </div>
            </header>

            <!-- Contenido Principal -->
            <section class="content">
                <!-- Contenedor de mensaje de éxito -->
                <div id="message-container" style="display: none; padding: 10px; margin-bottom: 10px; font-weight: bold;"></div>

                <!-- Formulario de Edición de Perfil -->
                <form class="edit-profile-form">
                    <div class="form-group">
                        <label for="profile-pic">Foto de Perfil</label>
                        <input type="file" id="profile-pic-input">
                    </div>
                    <div class="form-group">
                        <label for="first-name">Nombre</label>
                        <input type="text" id="first-name">
                    </div>
                    <div class="form-group">
                        <label for="last-name">Apellidos</label>
                        <input type="text" id="last-name">
                    </div>
                    <div class="form-group">
                        <label for="username">Nombre de Usuario</label>
                        <input type="text" id="username-input">
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" id="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password">
                    </div>
                    <button type="submit" class="btn save-btn">Guardar Cambios</button>
                </form>

                <!-- Botón para Cerrar Sesión -->
                <button id="logout-btn" class="btn logout-btn">Cerrar Sesión</button>
            </section>
        </div>
    </div>
</body>
</html>
